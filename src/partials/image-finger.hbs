{{#each this.hits}}
  <li class='photo-item'>
    <div class='photo-card'>
      <img
        src={{webformatURL}}
        alt={{tags}}
        width='360'
        height='240'
        loading='lazy'
        data-large={{largeImageURL}}
      />

      <div class='stats'>
        <p class='stats-item'>
          <i class='material-icons'>thumb_up</i>
          {{likes}}
        </p>
        <p class='stats-item'>
          <i class='material-icons'>visibility</i>
          {{views}}
        </p>
        <p class='stats-item'>
          <i class='material-icons'>comment</i>
          {{comments}}
        </p>
        <p class='stats-item'>
          <i class='material-icons'>cloud_download</i>
          {{downloads}}
        </p>
      </div>
    </div>
  </li>
{{/each}}